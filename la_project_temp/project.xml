<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_la_project_project_form" model="ir.ui.view">
            <field name="name">la.project.project</field>
            <field name="model">la.project.project</field>
            <field name="arch" type="xml">
                <form string="项目信息" version="7.0">
                    <header>
                        <field name="state_id" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="项目名称"/>
                            </h1>
                        </div>
                        <group>
                            <field name="partner_id"/>
                            <field name="type"/>
                        </group>
                        <notebook>
                            <page string="质量管理情况">
                                <group col="4">
                                    <field name="manager"/>
                                    <field name="director"/>
                                </group>
                            </page>
                            <page string="进度情况">
                                <group>
                                    <field name="percent"/>
                                </group>
                            </page>
                            <page string="收入情况">
                                <field name="income_ids"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               help="Follow this project to automatically track the events of this project."
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_la_project_project_tree" model="ir.ui.view">
            <field name="name">la.project.project</field>
            <field name="model">la.project.project</field>
            <field name="arch" type="xml">
                <tree string="项目信息" version="7.0">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="manager"/>
                    <field name="director"/>
                    <field name="percent"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>


        <record id="view_la_project_state_tree" model="ir.ui.view">
            <field name="name">la.project.state.tree</field>
            <field name="model">la.project.state</field>
            <field name="arch" type="xml">
                <tree string="状态信息" version="7.0" editable="top">
                    <field name="index"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_la_project_income_tree" model="ir.ui.view">
            <field name="name">la.project.income.tree</field>
            <field name="model">la.project.income</field>
            <field name="arch" type="xml">
                <tree string="收费信息" version="7.0">
                    <field name="price"/>
                    <field name="get_time"/>
                </tree>
            </field>
        </record>
        <record id="view_la_project_income_form" model="ir.ui.view">
            <field name="name">la.project.income.form</field>
            <field name="model">la.project.income</field>
            <field name="arch" type="xml">
                <form string="收费信息" version="7.0">
                    <sheet>
                        <group>
                            <field name="price"/>
                            <field name="get_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_la_project_project" model="ir.actions.act_window">
            <field name="name">Project Info</field>
            <field name="res_model">la.project.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_la_project_income" model="ir.actions.act_window">
            <field name="name">Project Income Info</field>
            <field name="res_model">la.project.income</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_la_project_state" model="ir.actions.act_window">
            <field name="name">Project state Info</field>
            <field name="res_model">la.project.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <!--MenuItems-->
        <menuitem name="项目管理" id="menu_la_project_root" sequence="110"/>
        <!--My MenuItems-->
        <menuitem name="项目" id="menu_la_project_project_root" sequence="10"
                  parent="menu_la_project_root"/>
        <menuitem name="项目信息" id="menu_la_project_project" sequence="10"
                  parent="menu_la_project_project_root" action="action_la_project_project"/>
        <menuitem name="项目收费" id="menu_la_project__income" sequence="20"
                  parent="menu_la_project_project_root" action="action_la_project_income"/>
        <menuitem name="状态管理" id="menu_la_project_state" sequence="30"
                  parent="menu_la_project_project_root" action="action_la_project_state"/>


        <record id="view_res_partner_event_form" model="ir.ui.view">
            <field name="name">res.partner.event.form</field>
            <field name="model">res.partner.event</field>
            <field name="arch" type="xml">
                <form string="事件" version="7.0">
                    <sheet>
                        <group>
                            <field name="type"/>
                            <field name="note"/>
                            <field name="partner_ids" wigdet="many2many_tags"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               help="Follow this project to automatically track the events of this project."
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_res_partner_event_tree" model="ir.ui.view">
            <field name="name">res.partner.event.tree</field>
            <field name="model">res.partner.event</field>
            <field name="arch" type="xml">
                <tree string="事件" version="7.0">
                    <field name="type"/>
                    <field name="note"/>
                    <field name="partner_ids"/>
                </tree>
            </field>
        </record>
        <record id="action_res_partner_event" model="ir.actions.act_window">
            <field name="name">res.partner.event</field>
            <field name="res_model">res.partner.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="事件" id="menu_crm_event" parent="base.menu_sales"
                  action="action_res_partner_event" sequence="4"/>
        <record id="view_partner_form_inherit_event" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.event</field>
            <field name="model">res.partner</field>
            <field name="priority">1</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Internal Notes']" position="after">
                    <page string="事件">
                        <field name="event_ids">
                            <tree>
                                <field name="type"/>
                                <field name="note"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
